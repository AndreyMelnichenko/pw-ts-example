{
    "name": "playwright-test-ts",
    "version": "2.1.0",
    "description": "PopTop Automation Tests",
    "private": "true",
    "author": "Andrii Melnuchenko, Anastasiia Maschenko",
    "keywords": ["E2E", "Visual tests", "API", "SEO", "Components"],
    "license": "ISC",
    "scripts": {
        "commands": "node -e \"console.log(Object.keys(require('.' + require('path').sep + 'package.json').scripts || {}))\"",
        "cleanTest": "rm -rf ./test-results ./test-data ./html-report",
        "test": "playwright test --config=playwright.config.ts --grep-invert @vrt --grep @smoke",
        "test-chrome": "playwright test --config=playwright.config.ts --project='Desktop Chrome'",
        "test-chrome:mobile": "playwright test --config=playwright.config.ts --project='Mobile Chrome' --workers 1 --retries=0",
        "test:list": "playwright test --list --grep @smoke",
        "lint": "make lint",
        "lint:fix": "npx tslint -p tsconfig.json --fix",
        "docker:build": "rm package-lock.json && docker build -t registry.gitlab.com/poptop/tests:latest . && npm i",
        "docker:run": "docker run --rm -dit --net=host -v $PWD:/home/ciUser/tests -v /var/run/docker.sock:/var/run/docker.sock --name test-pw registry.gitlab.com/poptop/tests:latest /bin/bash",
        "docker:test": "docker exec -i test-pw bash -c 'retry=1 ci=true tag=\"@vrt\" browser=chrome ./run.sh'",
        "docker:stop": "docker stop test-pw",
        "decrypt-creds": "rm creds.json &&echo $SECRET_PASSWORD | gpg --batch --passphrase-fd 0 --yes -d creds.json.gpg > creds.json",
        "crypt-creds": "rm creds.json.gpg && echo $SECRET_PASSWORD | gpg --batch --passphrase-fd 0 --yes -c creds.json"
    },
    "dependencies": {
        "@playwright/test": "^1.21.1",
        "@types/faker": "^5.5.8",
        "@types/lodash": "^4.14.178",
        "@types/node": "^16.4.0",
        "@visual-regression-tracker/agent-playwright": "^5.0.0",
        "faker": "^5.5.3",
        "got": "^11.8.2",
        "inbucket-js-client": "^1.0.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "node-html-parser": "^5.2.0",
        "playwright": "^1.21.1",
        "strictts": "^0.1.17",
        "ts-node": "^10.1.0",
        "tslint": "^6.1.3",
        "typescript": "^4.5.2"
    }
}
